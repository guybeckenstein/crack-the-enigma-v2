<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane cache="true" fitToHeight="true" fitToWidth="true" prefHeight="500.0" prefWidth="900.0" stylesheets="@loginStyleOne.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <content>
      <VBox>
         <children>
            <HBox id="keyboardInputStackPane" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label styleClass="header-label" text="Choose Username" wrapText="true" />
                  <TextField fx:id="usernameTextField" prefHeight="34.0" prefWidth="250.0" promptText="Enter username..." HBox.hgrow="SOMETIMES">
                     <HBox.margin>
                        <Insets right="100.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            <HBox id="machineStateHBox" alignment="TOP_CENTER" prefHeight="300.0" prefWidth="200.0" spacing="30.0" VBox.vgrow="SOMETIMES">
               <children>
                  <Button id="login" mnemonicParsing="false" onAction="#loginAction" prefHeight="60.0" prefWidth="180.0" text="Login" textAlignment="CENTER" wrapText="true" />
                  <Button id="quit" mnemonicParsing="false" onAction="#quitAction" prefHeight="60.0" prefWidth="180.0" text="Quit" textAlignment="CENTER" wrapText="true" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="100.0" />
               </padding>
            </HBox>
            <HBox id="errorHBox" alignment="CENTER_LEFT" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label id="details" fx:id="errorMessageLabel" text="Crack The Enigma - Exercise 3" wrapText="true">
                     <font>
                        <Font name="Arial Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
